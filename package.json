{
  "name": "home-internet-status",
  "shortName": "his",
  "version": "0.1.0",
  "description": "A tool to log connection status and speed of your home internet connection.",
  "author": "Simon Lepel <simbo@simbo.de> (https://simbo.de)",
  "homepage": "https://github.com/simbo/home-internet-status",
  "license": "MIT",
  "private": true,
  "repository": "github:simbo/home-internet-status",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build:client": "rollup -c",
    "build:styles": "postcss src/styles/*.scss -d dist/styles --ext css",
    "build:server": "tsc -b tsconfig.json",
    "build": "yarn run build:client && yarn run build:styles && yarn run build:server",
    "dev:client": "yarn run build:client -w",
    "dev:styles": "yarn run build:styles && yarn run build:styles -w",
    "dev:server": "ts-node --log-error --project tsconfig.json src/index.ts",
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:fix": "yarn run lint:eslint:fix && yarn run lint:prettier:fix",
    "lint:eslint": "eslint -c .eslintrc --ext .ts,.tsx,.js,.jsx .",
    "lint:eslint:fix": "eslint -c .eslintrc --ext .ts,.tsx,.js,.jsx --fix .",
    "lint:prettier": "prettier --check \"**/*.{ts,tsx,scss,js,md,json,yml}\"",
    "lint:prettier:fix": "prettier --write \"**/*.{ts,tsx,scss,js,md,json,yml}\"",
    "prebuild": "rm -rf dist",
    "preflight": "yarn run lint && yarn run test && yarn run build",
    "start": "yarn dev",
    "test": "echo \"No tests specified. Skipping...\" && exit 0"
  },
  "dependencies": {
    "@hapi/hapi": "^20.0.3",
    "@hapi/inert": "^6.0.3",
    "@hapi/vision": "^6.0.1",
    "date-fns": "^2.16.1",
    "date-fns-tz": "^1.0.12",
    "dotenv": "^8.2.0",
    "find-up": "^5.0.0",
    "history": "^4.10.1",
    "is-reachable": "^5.0.0",
    "load-json-file": "^6.2.0",
    "mongoose": "^5.11.12",
    "preact": "^10.5.10",
    "preact-router": "^3.2.1",
    "pug": "^3.0.0",
    "rxjs": "^6.6.3",
    "small-store": "^2.0.0",
    "speedtest-net": "^2.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@rollup/plugin-typescript": "^8.1.0",
    "@types/hapi__hapi": "^20.0.4",
    "@types/hapi__inert": "^5.2.2",
    "@types/hapi__vision": "^5.5.2",
    "@types/history": "^4.7.8",
    "@types/pug": "^2.0.4",
    "@types/speedtest-net": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "autoprefixer": "^10.2.1",
    "css-mqpacker-sort-mediaqueries": "^0.2.2",
    "css-reset-and-normalize": "^2.3.5",
    "cssnano": "^4.1.10",
    "eslint": "^7.17.0",
    "eslint-plugin-editorconfig": "^3.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^31.0.5",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-unicorn": "^26.0.1",
    "mqpacker": "^7.0.0",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "postcss-easy-import": "^3.0.0",
    "postcss-scss": "^3.0.4",
    "prettier": "^2.2.1",
    "rollup": "^2.36.1",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^9.1.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  }
}
